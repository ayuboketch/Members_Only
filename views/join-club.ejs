<div class="row">
  <div class="col-md-6 offset-md-3">
    <h2 class="mb-4">Join the Club</h2>

    <form action="/auth/join-club" method="POST">
      <div class="mb-3">
        <label for="passcode" class="form-label">Enter Club Passcode</label>
        <input
          type="password"
          class="form-control"
          id="passcode"
          name="passcode"
          required
        />
      </div>

      <button type="submit" class="btn btn-primary">Join Club</button>
    </form>
  </div>
</div>
