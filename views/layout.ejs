<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Members Only | <%= typeof title != 'undefined' ? title : 'Home' %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .message-card { margin-bottom: 1rem; }
        .flash-message { margin-bottom: 1rem; }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
        <div class="container">
            <a class="navbar-brand" href="/">Members Only</a>
            <div class="navbar-nav ms-auto">
                <% if (typeof currentUser !== 'undefined' && currentUser) { %>
                    <a class="nav-link" href="/messages/new">Create Message</a>
                    <% if (!currentUser.isMember) { %>
                        <a class="nav-link" href="/join-club">Join Club</a>
                    <% } %>
                    <a class="nav-link" href="/auth/logout">Logout</a>
                <% } else { %>
                    <a class="nav-link" href="/login">Login</a>
                    <a class="nav-link" href="/signup">Sign Up</a>
                <% } %>
            </div>
        </div>
    </nav>

    <div class="container">
        <% if (typeof messages !== 'undefined' && messages.error) { %>
            <div class="alert alert-danger flash-message">
                <%= messages.error %>
            </div>
        <% } %>
        
        <% if (typeof messages !== 'undefined' && messages.success) { %>
            <div class="alert alert-success flash-message">
                <%= messages.success %>
            </div>
        <% } %>

        <%- body %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>